<%= simple_form_for([@article, @article.reviews.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.input_field :commenter %>
  </p>
  <p>
    <%= f.label :comment %><br>
    <%= f.input_field :body %>
  </p>
  <p>
      <%= f.input :rating, as: :radio_buttons, collection: 1..5 %>
  </p>
  <p>
    <%= f.button :submit %>
  </p>
<% end %>